<div class="modal fade" id="myModal" tabindex="-1" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Add a band</h4>
      </div>
      <div class="modal-body">
      <div class='picture_search_bands picture_form' style='background-image: url("https://lh3.googleusercontent.com/UrY7BAZ-XfXGpfkeWg0zCCeo-7ras4DCoRalC_WXXWTK9q5b0Iw7B0YQMsVxZaNB7DM=w300")';></div>
        <%= form_for [@band] do |f| %>

        <%= f.label :spotifyID %>
        <%= f.text_field :spotifyID %>
        <br>
         <%= f.label :name %>
        <%= f.text_field :name %> <span id='search' class="listen material-icons md-48">search</span> 
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :picture, value: "url_picture" %>


        
        <br>
        

        



      



      </div>
      <div class="modal-footer">
      <button type="submit" class="btn btn-primary">Add to your bands</button>
     
      <% end %> 
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
  

  <h2>List of bands from <%= current_user.name %> <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
  Add bands
</button></h2>
    <table class="table table-hover">
    <tr><th>Picture</th><th>Name</th><th>Spotify ID</th></tr>
    <% @bands.each do |band| %>
    
     <tr><td><img class='picture_bands' style='background-image: url("<%= band.picture %>")'</td><td><%= band.name %> </td> <td><%= band.spotifyID %> </td>
     <td><%= link_to('Delete', user_band_path(@user,band.id), method: :delete,data: {confirm:'Are you sure?'}) %>  </td>

     </tr>
    
    <% end %>
    </table>





 

