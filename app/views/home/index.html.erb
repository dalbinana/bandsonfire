 <!-- Modal -->
    <div id="modalHome" class="modal fade" role="dialog">
      <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">TOP 10 popular songs of the moment</h4>
      </div>
      <div class="modal-body">
        
        <table class="table table-striped list_of_songs">
          <th class="col-md-9">Name of the song</th> 
          <th class="col-md-2">Popularity</th>
          <th class="col-md-1">Listen</th>


        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>

    </div>
    </div>
    <!-- END MODAL-->
<div class="jumbotron">
  <% if user_signed_in? %>
    <h1>Welcome back, <%= current_user.name %></h1>
    <p class="lead">
      Are your bands hot right now? Check it!
    </p>
    <%= link_to "See bands", user_bands_path(current_user), :class => 'btn btn-large btn-danger' %>
  <% else %>
    <h1>Welcome, new user!</h1>
    <p class="lead">
      You must sign in or sign up before you can access our super sweet,
      top secret content.
    </p>
    <div class="row-fluid">
      <div class="span6">
        <%= link_to "Sign In", new_user_session_path, :class => "btn btn-success" %>
      </div>
      <div class="span6">
        <%= link_to "Sign Up", new_user_registration_path, :class => "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="table-responsive">
                <table class="table table-condensed table-striped spoticontent">
                
                    <tr>
                    <th class="col-md-3">Image</th>
                    <th class="col-md-6">Name of the band</th> 
                    <th class="col-md-2">Popularity</th>
                    <th class="col-md-1">Songs</th>
                    </tr>
                    <% @bands_to_show.each do |band| %>
                    


                    <tr><td><img class='picture_bands' style='background-image: url("<%= band[:picture] %>")'</td><td><%= band[:name] %> </td> <td><%= band[:popularity] %> </td><td class='see_songs' data-id="<%= band[:spotifyID] %>"><span class="listen material-icons md-48" aria-hidden="true" data-toggle="modal" data-target="#modalHome" >playlist play</span></td></tr>
                    <% end %>

                                

                </table>
            </div>
  </div>
</div>              

